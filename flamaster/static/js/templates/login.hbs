<div class="modal-header">
    <a class="close" data-dismiss="modal">Ã—</a>
    <h3>Enter your credetials to sign in</h3>
</div>
<div class="modal-body" />
  {{#form form class="form-horizontal"}}
    <fieldset>
      <div class="control-group">
        {{{labelFor "email" "Email:" }}}
        <div class="controls">
          {{{textField "email" "your email to login"}}}
        </div>
      </div>
      <div class="control-group">
        {{{labelFor "password" "Password:" }}}
        <div class="controls">
          {{{passwordField "password" "your password please"}}}
        </div>
      </div>
    </fieldset>
  {{/form}}
</div>
<div class="modal-footer">
  <button type="submit" class="btn btn-primary custom">Sign In</button>
  <a class="btn" data-dismiss="modal">Cancel</a>
</div>
